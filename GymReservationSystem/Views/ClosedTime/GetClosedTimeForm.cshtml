@model GymReservationSystem.Models.ClosedTimeRequest

<h2>Save</h2>
@using (Html.BeginForm("Save", "ClosedTime", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(a => a.Id)

    }

    <div class="form-group">
        <label>Start time</label>
        @Html.TextBoxFor(a => a.StartTime, new { @class = "form-control", @type = "time" })
        @Html.ValidationMessageFor(a => a.StartTime)
    </div>
    <div class="form-group">
        <label>End time</label>
        @Html.TextBoxFor(a => a.EndTime, new { @class = "form-control", @type = "time" })
        @Html.ValidationMessageFor(a => a.EndTime)
    </div>
    <div class="form-group">
        <label>Day of week</label>
        @Html.EnumDropDownListFor(a => a.DayOfWeek, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.DayOfWeek)
    </div>
    <div class="form-group">
        <label>Reason</label>
        @Html.TextBoxFor(a => a.Reason, new { @class = "form-control"})
        @Html.ValidationMessageFor(a => a.Reason)
    </div>


    <div>
        <input type="submit" value="Save" />
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/jquery.timepicker.min.css")
    <script type="text/javascript">
    $(document).ready(function(){
     $("input[type='time']").each(function(index,item){
            var settings={};

            if ($(item).is("[maxTime]")){
                settings.maxTime=$(item).attr("maxTime");}
            $(item).timepicker(settings);

        })
        });

    </script>


}